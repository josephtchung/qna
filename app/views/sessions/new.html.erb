<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<%= form_for(:session, url: sessions_path, role: 'form') do |f| %>

  <div class="form group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
  </div>

  <%= f.hidden_field :after, value: @after %>
  <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
<% end %>

<br>
New user? <%= link_to "Sign up now!", signup_path, class: 'btn btn-default' %>
