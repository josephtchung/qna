<% provide(:title, 'New Question') %>
<h1>New Question</h1>

<p>Ask a question</p>

<div class="container">
  <%= form_for(@question, html: {class: 'form-question', role: 'form'}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.text_field :content, class: 'form-control', placeholder: 'Your Question' %>
  <%= f.text_field :topic_list, class: 'form-control', placeholder: 'Topics' %>
  <%= f.text_field :condition_list, class: 'form-control', placeholder: 'Conditions' %>

  <%= f.submit "Done", class: "btn btn-large btn-primary" %>
  <% end %>
</div>
